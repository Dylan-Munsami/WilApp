    <!-- Existing fragments -->
    <fragment
        android:id="@+id/nav_home"
        android:name="vcmsa.projects.wilapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_aboutus"
        android:name="vcmsa.projects.wilapp.ui.aboutus.AboutUsFragment"
        android:label="@string/menu_aboutus"
        tools:layout="@layout/fragment_aboutus" />

    <fragment
        android:id="@+id/nav_volunteer"
        android:name="vcmsa.projects.wilapp.ui.volunteer.VolunteerFragment"
