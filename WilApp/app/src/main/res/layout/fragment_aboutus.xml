<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            android:contentDescription="Logo" />

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who We Are 🌟"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:layout_marginBottom="16dp" />

        <!-- Mission Statement Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF8E1"
            android:layout_marginBottom="24dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/textAboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The I.C. Norath Charitable Trust exists to support vulnerable communities through food relief, education, and empowerment. We believe in collective impact — and it starts with you."
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:textColor="#555555"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <!-- Vision Section -->
        <TextView
            android:text="Our Vision 🌈"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3CD"
            android:layout_marginBottom="24dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A future where no child goes to bed hungry, and every individual has access to education, dignity, and opportunity."
                android:textSize="15sp"
                android:textColor="#6B4F00"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <!-- Core Values -->
        <TextView
            android:text="Our Core Values 💛"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3CD"
            android:layout_marginBottom="24dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Compassion\n• Accountability\n• Equity\n• Community\n• Empowerment"
                android:textSize="15sp"
                android:textColor="#6B4F00" />
        </androidx.cardview.widget.CardView>

        <!-- Impact Stats -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFF8E1"
            android:layout_marginBottom="24dp"
            android:padding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌍 12,000+ Meals Delivered"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/BaseYellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥 300+ Volunteers Nationwide"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/BaseYellow" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Call to Action -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Involved 🤝"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF8E1"
            android:padding="20dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whether you donate, volunteer, or simply spread the word — you’re helping us change lives. Join our movement today."
                android:textSize="16sp"
                android:textColor="#555555"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <!-- Founder Quote -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“We started this trust with nothing but heart — and today, thanks to people like you, hope is growing across the country.”"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Founder, I.C. Norath Charitable Trust"
            android:textSize="14sp"
            android:textColor="@color/BaseYellow"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
