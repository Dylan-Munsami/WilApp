<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request for Assistance"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Disaster Response -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDisasterResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFF3E0"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disaster Response"
                android:textColor="#FFA726"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start"
                android:drawablePadding="8dp"

            android:drawableTint="#FFA726" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report a natural disaster or emergency affecting your area."
                android:textColor="#616161"
                android:textSize="14sp"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingStart="28dp"
            android:lineSpacingMultiplier="1.2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Immediate Response -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImmediateResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFEBEE"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Immediate Response"
            android:textColor="#EF5350"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start"
            android:drawablePadding="8dp"

            android:drawableTint="#EF5350" />

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request urgent help for critical personal or community needs."
            android:textColor="#616161"
            android:textSize="14sp"
            android:gravity="start"
            android:paddingTop="8dp"
            android:paddingStart="28dp"
            android:lineSpacingMultiplier="1.2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
android:id="@+id/cardDonationResponse"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
app:cardBackgroundColor="#E8F5E9"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="20dp"
android:background="?attr/selectableItemBackground">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Donation Response"
    android:textColor="#66BB6A"
    android:textSize="18sp"
    android:textStyle="bold"
    android:gravity="start"
    android:drawablePadding="8dp"

    android:drawableTint="#66BB6A" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Request items, food, or financial aid from the NPO."
    android:textColor="#616161"
    android:textSize="14sp"
    android:gravity="start"
    android:paddingTop="8dp"
    android:paddingStart="28dp"
    android:lineSpacingMultiplier="1.2" />
</LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- General Inquiries -->
<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
android:id="@+id/cardGeneralInquiries"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
app:cardBackgroundColor="#E3F2FD"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="20dp"
android:background="?attr/selectableItemBackground">

<TextView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="General Inquiries"
    android:textColor="#42A5F5"
    android:textSize="18sp"
    android:textStyle="bold"
    android:gravity="start"
    android:drawablePadding="8dp"

    android:drawableTint="#42A5F5" />

<TextView
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ask a question or get in touch with the organization."
    android:textColor="#616161"
    android:textSize="14sp"
    android:gravity="start"
    android:paddingTop="8dp"
    android:paddingStart="28dp"
    android:lineSpacingMultiplier="1.2" />
</LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>