<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">



        <!-- Heading -->
        <TextView
            android:id="@+id/textDonation"
            android:text="Donations"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Subtitle -->
        <TextView
            android:text="Every bit you donate goes to those in need"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Donation Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount (R)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="6" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinEvent1"
            android:text="Donate Today!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/Base"/>
        <!-- Info Text -->
        <TextView
            android:text="100% of your donation supports food relief programs in under-resourced communities."
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Donate Button -->


        <!-- Section: Why It Matters -->
        <TextView
            android:text="Why It Matters"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Food insecurity affects 1 in 4 children in South Africa. Your donation helps a child go to school with a full belly, ready to learn and grow."
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Section: Where It Goes -->
        <TextView
            android:text="Where Your Donation Goes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="• 70% – Food and Essentials\n• 20% – Delivery and Logistics\n• 10% – Community Education"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Section: Impact Stats -->
        <TextView
            android:text="🌍 12,000+ Meals Delivered   👥 300+ Volunteers"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/thumbs"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:contentDescription="Testimonial photo" />

        <!-- Thank You Message -->
        <TextView
            android:text="Thank you for your compassion and generosity. ❤️"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
