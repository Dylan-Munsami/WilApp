<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure Donation"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay with PayPal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- PayPal Logo -->
        <ImageView
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_paypal"
            android:scaleType="fitCenter"
            android:layout_marginBottom="24dp" />

        <!-- Explanation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You will be redirected to PayPal to complete your donation securely. No card details will be stored in the app."
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Donation Amount Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation Amount"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R100.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/BaseYellow"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- PayPal Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to PayPal"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:backgroundTint="#003087"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Security Notice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your transaction is encrypted and secure."
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmTransfer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="I've Completed the Transfer"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/Base"
                android:textSize="16sp"
                android:layout_marginTop="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/BaseYellow"
                android:backgroundTint="@android:color/transparent"
                app:strokeWidth="1dp"
                app:strokeColor="@color/BaseYellow"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@color/BaseYellow"
                android:backgroundTint="@android:color/transparent"
                app:strokeWidth="1dp"
                app:strokeColor="@color/BaseYellow"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
